{
  "compilerOptions": {
    "declaration": false,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES5",
    "outDir": "build",
    "lib": [
      "ES5",
      "ES2015.Promise",
      "ES2015.Iterable"
    ],
    "types": [
      "chai",
      "mocha"
    ],
    "rootDir": "src"
  },
  "include": [
    "src/*"
  ]
}
